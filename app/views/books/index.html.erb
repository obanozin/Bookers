    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h3>Books</h3>

<table>
	<thead>
		<tr>
			<th>title</th>
            <th>body</th>
            <th></th>
        </tr>
    </thead>

<tbody>
<% @books.each do |book| %>
<tr> 
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id), class: "show_#{book.id}" %>
<%= link_to "edit", edit_book_path(book.id), class: "edit_#{book.id}" %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" , class: "destroy_#{book.id}" %>
</td>
</tr>  
<% end %>
</tbody>   
</table>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>
